{
    "compilerOptions": {
        "target": "ES6",
        "sourceMap": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "jsx": "react",
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "@root/*": ["./*"],
            "@global/*": ["src/global/*"],
            "@page/*": ["src/page/*"],
            "@scss/*": ["src/scss/*"],
            "@element/*": ["private_modules/Element/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/**/*"
        ],
        "noImplicitAny": false
    },
    "include": [
        "src"
    ],
}